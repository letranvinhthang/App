    <Grid>
        
        <Grid Margin="20" Background="#1C2F3E">
            
            <Grid.Effect>
                
                <DropShadowEffect BlurRadius="30"
                                  ShadowDepth="2"
                                  Direction="-90"
                                  Color="Gray">
                    
                </DropShadowEffect>
                
            </Grid.Effect>
            
            <StackPanel Width="100"
                        HorizontalAlignment="Left"
                        Background="#14212B">
                    
                <Button Style="{DynamicResource OrderBtnStyle}" Height="100"
                        x:Name="Order"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0 80 0 20" MouseEnter="Order_MouseEnter_1"
                        MouseLeave="Order_MouseLeave_1">
                    
                    <Image Source="hinh/order.png"
                            Stretch="None"></Image>
                    

                </Button>

                <Button Style="{DynamicResource NhanvienButtonStyle}" Height="100"
                        x:Name="NhanVien"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0 0 0 10" MouseEnter="NhanVien_MouseEnter"
                        MouseLeave="NhanVien_MouseLeave">
                    
                    <Image Source="hinh/nhanvien.png"
                           Stretch="None"></Image>
                    
                </Button>

               

                <Button Style="{DynamicResource NhapKhoButtonStyle}" Height="100"
                        x:Name="NhapKho"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0 10 0 0" MouseEnter="NhapKho_MouseEnter" MouseLeave="NhapKho_MouseLeave">

                    <Image Source="hinh/kho2.png"
                           Stretch="None"></Image>
                    
                </Button>
                <Button Style="{DynamicResource ThongKeButtonStyle}" Height="100"
                        x:Name="ThongKe"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0 0 0 10" MouseEnter="ThongKe_MouseEnter" MouseLeave="ThongKe_MouseLeave">

                    <Image Source="hinh/thongke.png"
                           Stretch="None"></Image>

                </Button>

            </StackPanel>

            <Grid Height="80"
                  VerticalAlignment="Top"
                  Background="#233C4F">

                <TextBlock Text="Cửa hàng tiện lợi"
                           FontFamily="open san condensed"
                           FontSize="26"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#E0FFFF"></TextBlock>

                <Button Style="{DynamicResource ShutdownButtonStyle}" Height="40"
                        x:Name="shutdown"
                        Width="40"
                        Background="Transparent"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Margin=" 0 20 20 0" BorderBrush="Transparent" Click="shutdown_Click">

                    <Image Source="hinh/shutdown.png"
                            ></Image>
                    
                </Button>
                
            </Grid>
            <Grid Height="80"
                  VerticalAlignment="Bottom"
                  Background="#233C4F">
                
            </Grid>
            <Popup x:Name="popup_uc"
                   AllowsTransparency="true"
                    HorizontalOffset="10"
                   VerticalOffset="10">

                <Grid>
                    <local:PopupUseControl x:Name="Header" Foreground="#E0FFFF"></local:PopupUseControl>
                </Grid>
                
            </Popup>
        </Grid>
        
    </Grid>
    
</Window>
