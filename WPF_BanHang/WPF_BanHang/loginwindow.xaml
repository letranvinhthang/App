<Window x:Class="WPF_BanHang.loginwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:WPF_BanHang"
        mc:Ignorable="d"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
      ResizeMode="NoResize"
      WindowState="Maximized"
        Name="window"
       DataContext="{StaticResource loginVM}"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="Hinh/Logo.png"
        Title="Đăng nhập" Height="1080" Width="1920" >
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding logincommand}"
                    CommandParameter="{Binding ElementName=window}"/>
    </Window.InputBindings>
    <Grid>
        <!--<Grid.Background>
            <ImageBrush ImageSource="Hinh/Login.jpg" Stretch="UniformToFill" />
        </Grid.Background>-->
        <Rectangle Margin="0,0,0,-16">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Hinh/Background.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle RadiusY="10" RadiusX="10" Fill="White" HorizontalAlignment="Center" Width="500" Height="500" VerticalAlignment="Center">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="15" Direction="0" RenderingBias="Quality" ShadowDepth="1" Color="#FFBBBBBB"/>
            </Rectangle.Effect>
        </Rectangle>
        <StackPanel Margin="0,0,25,0" Height="1014" VerticalAlignment="Center" HorizontalAlignment="Center" Width="1870">
            <StackPanel Margin="0 270 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="UserControl_BanHang/Icons/Logo.png" Width="100" Height="100" Margin="0 30 0 0"/>
            </StackPanel>
            <StackPanel Margin="0 20 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label Content="ĐĂNG NHẬP" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 35 0 0" Foreground="Gray" FontSize="18"/>
                <TextBox Margin="0,10" materialDesign:HintAssist.Hint="ID nhân viên" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Champagne &amp; Limousines" FontSize="18" Text="{Binding usename}" Width="200"/>
                <PasswordBox x:Name="FloatingPasswordBox" Margin="0,10" materialDesign:HintAssist.Hint="Mật khẩu" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" FontFamily="Champagne &amp; Limousines" FontSize="18" Width="200">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction 
                Command="{Binding PasswordChangedcommand}" 
                CommandParameter="{Binding ElementName=FloatingPasswordBox}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Grid.Column="0" Margin="15 50" 
    Style="{StaticResource MaterialDesignRaisedButton}"
    
    Command="{Binding logincommand}"
    CommandParameter="{Binding ElementName=window}"
    ToolTip="BẤM ĐI BẠN EI~" Content="ĐĂNG NHẬP">

                </Button>
                <Button Grid.Column="1" Margin="15 50"
                        Command="{Binding exitcommand}"
                        CommandParameter="{Binding ElementName=window}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="100"
                        Background="Red"
                        ToolTip="THOÁT CHƯƠNG TRÌNH" Content="Exit">
                </Button>
            </StackPanel>
        </StackPanel>


    </Grid>
