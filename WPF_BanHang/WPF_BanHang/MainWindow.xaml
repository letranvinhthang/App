<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BanHang"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:WPF_BanHang.UserControl_BanHang"               
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
     xmlns:view="clr-namespace:WPF_BanHang.view" x:Class="WPF_BanHang.MainWindow"
        mc:Ignorable="d"
        x:Name="window"
        Icon="Hinh\Logo.png"
        Title="Cửa hàng tiện lợi" Height="720" Width="1280"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        
        ResizeMode="CanResize"
        DataContext="{StaticResource mainVM}">

    <Window.Resources>
        <Storyboard x:Key="Move0">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="Move1">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="65">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="Move2">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="130">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="Move3">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="195">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="Move4">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="ellipse">
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="260">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Button.Click" SourceName="item0">
            <BeginStoryboard x:Name="Move0_BeginStoryboard" Storyboard="{StaticResource Move0}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="item1">
            <BeginStoryboard x:Name="Move1_BeginStoryboard" Storyboard="{StaticResource Move1}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="item2">
            <BeginStoryboard x:Name="Move2_BeginStoryboard" Storyboard="{StaticResource Move2}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="item3">
            <BeginStoryboard x:Name="Move3_BeginStoryboard" Storyboard="{StaticResource Move3}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="item4">
            <BeginStoryboard x:Name="Move4_BeginStoryboard" Storyboard="{StaticResource Move4}"/>
        </EventTrigger>
    </Window.Triggers>


    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding SetupQuyenCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black">
            <!--TIÊU ĐỀ-->
            <StackPanel VerticalAlignment="Center">
                <TextBlock Foreground="White" HorizontalAlignment="Center" FontSize="30"><Run Text="CỬA HÀNG TIỆN LỢI"/></TextBlock>
            </StackPanel>
            <!--ĐỒNG HỒ-->
            <Grid  VerticalAlignment="Center" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="dongho1" Foreground="White" FontSize="35"  />
                    <Image Source="Hinh/Logo.png" Width="40" Margin="20 0 0 0"/>
                </StackPanel>
            </Grid>


            <!--NỘI DUNG-->
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="Goldenrod">


                <Grid Grid.Row="0" VerticalAlignment="Top" Background="BlanchedAlmond"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>


                        <!--NÚT ORDER-->
                        <Button x:Name="item0" Height="50"  Margin="0 15 0 0" BorderBrush="Transparent" Background="Transparent">

                            <Button.Style>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNang}" Value="0">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnOrderCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                            <DockPanel>
                                <Image  Width="40" Height="40" Source="UserControl_BanHang/Icons/icon-order.png" RenderTransformOrigin="-0.19,0.542"/>
                                <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="20" Margin="0 7 0 0" Text="ORDER"/>
                            </DockPanel>

                        </Button>
                        
                        <!--NÚT THỐNG KÊ-->
                        <Button Height="50" x:Name="item1"  Margin="0 15 0 0" BorderBrush="Transparent" Background="Transparent">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNang}" Value="1">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnThongKeCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DockPanel>
                                <Image Width="40" Height="40" Source="UserControl_BanHang/Icons/Thongke.png"/>
                                <TextBlock VerticalAlignment="Center" FontSize="20" Foreground="White" Margin="0 7 0 0"><Run Text="THỐNG KÊ"/></TextBlock>
                            </DockPanel>
                        </Button>
                        <!--NÚT SẢN PHẨM-->
                        <Button Height="50" x:Name="item2" Margin="0 15 0 0" BorderBrush="Transparent" Background="Transparent">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNang}" Value="2">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnNhapKhoCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DockPanel>
                                <Image Width="40" Height="40" Source="UserControl_BanHang/Icons/Kho.png"/>
                                <TextBlock VerticalAlignment="Center" FontSize="20" Foreground="White" Margin="0 7 0 0" Text="SẢN PHẨM"/>
                            </DockPanel>
                        </Button>
                        <!--NÚT NHẬP HÀNG-->
                        <Button Height="50" x:Name="item3" Margin="0 15 0 0" BorderBrush="Transparent" Background="Transparent">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNang}" Value="4">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnNhapHangCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DockPanel>
                                <Image Width="40" Height="40" Source="UserControl_BanHang/Icons/ThemSP.png"/>
                                <TextBlock VerticalAlignment="Center" FontSize="20" Foreground="White" Margin="0 7 0 0" Text="NHẬP HÀNG"/>
                            </DockPanel>
                        </Button>
                        <!--NÚT NHÂN VIÊN-->
                        <Button  Height="50" x:Name="item4" Margin="0 15 0 0" BorderBrush="Transparent" Background="Transparent">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ChucNang}" Value="3">
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding BtnNhanVienCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                            <DockPanel>
                                <Image Width="40" Height="40" Source="Hinh/Nhanvien.png"/>
                                <TextBlock VerticalAlignment="Center" FontSize="20" Foreground="White" Margin="0 7 0 0"><Run Text="NHÂN VIÊN"/></TextBlock>
                            </DockPanel>

                        </Button>

                    </StackPanel>
                    <!--NÚT ĐỔI MẬT KHẨU-->
                    <Button Command="{Binding dmkcommand}" Height="50" FontSize="20"  Margin="0 0 0 100" VerticalAlignment="Bottom" BorderBrush="Transparent" Background="Transparent">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="FontWeight" Value="Normal"/>
                            </Style>
                        </Button.Style>
                        <DockPanel>
                            <Image Width="40" Height="40" Source="UserControl_BanHang/Icons/icon-password.png"/>
                            <TextBlock Text="ĐỔI MẬT KHẨU"  VerticalAlignment="Center" FontSize="20" Margin="0 7 0 0"/>
                        </DockPanel>
                    </Button>
                    <!--NÚT ĐĂNG XUẤT-->
                    <Button Height="50"  VerticalAlignment="Bottom" BorderBrush="Transparent" Background="Transparent"
                            Margin="0 0 0 30"
                            Command="{Binding closecommand}"
                            CommandParameter="{Binding ElementName=window}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="FontWeight" Value="Normal"/>
                            </Style>
                        </Button.Style>

                        <DockPanel>
                            <Image Width="40" Height="40" Source="UserControl_BanHang/Icons/logout.png"/>
                            <TextBlock VerticalAlignment="Center" FontSize="20" Margin="0 7 0 0"><Run Text="ĐĂNG XUẤT"/></TextBlock>
                        </DockPanel>

                    </Button>
                </Grid>
            </Grid>
            <Grid Grid.ColumnSpan="2" Width="5" Margin="195 0" HorizontalAlignment="Left">
                <Rectangle Fill="{StaticResource SecondaryAccentBrush}" Width="2" HorizontalAlignment="Right"/>
                <Ellipse x:Name="ellipse" Width="10" Height="10" VerticalAlignment="Top" Fill="{StaticResource SecondaryAccentBrush}" Margin="0 35" 
                 RenderTransformOrigin="0.5, 0.5">
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>
            <Grid Grid.Column="1">
                <!--CONTENT-->
                <Grid x:Name="order">
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChucNang}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    
                    <Grid DataContext="{StaticResource orderVM}">
                  
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <!--BARCODE-->
                        <Grid Grid.Row="0" Background="DarkGoldenrod">
                            <StackPanel Orientation="Horizontal">
                                <TextBox
                                    x:Name="BARCODE" Margin="10"
                                    FontSize="20" Width="200" Height="30" 
                                    Background="White"
                                    materialDesign:HintAssist.Hint="Barcode"
                                    >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="TextChanged">
                                            <i:InvokeCommandAction 
                                                    Command="{Binding BarcodeChangedcommand}" 
                                                    CommandParameter="{Binding ElementName=BARCODE}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </TextBox>

                                <TextBlock Margin="30 0 0 0" Text="Số lượng: " FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" />
                                <TextBox x:Name="SOLUONG" FontSize="20" Width="200" Height="30" Text="{Binding soluongsp}" Background="White"/>
                                <!--NÚT NHẬP SỐ LƯỢNG-->
                                <Button Content="Nhập" Background="#ff6f00" BorderBrush="Transparent" Margin="10 0 0 0" Width="120" Height="30" Command="{Binding editsoluong}" CommandParameter="{Binding ElementName=SOLUONG}"/>
                            </StackPanel>
                        </Grid>
                        <!--THÔNG TIN SẢN PHẨM KHÁCH MUA-->
                        <Grid Grid.Row="1"  Background="PaleGoldenrod">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="31*"/>
                                <ColumnDefinition Width="5*"/>
                            </Grid.ColumnDefinitions>
                            <ListView ItemsSource="{Binding orderlist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" Grid.ColumnSpan="2">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Loaded">
                                        <i:InvokeCommandAction 
                                        Command="{Binding unloadcommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <!--ĐỊNH DẠNG NỘI DUNG-->
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListViewItem}">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <Setter Property="FontSize" Value="15"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.View>
                                    <GridView>
                                        <!--ĐỊNH DẠNG HEADER-->
                                        <GridView.ColumnHeaderContainerStyle>
                                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                                <Setter Property="FontSize" Value="20"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="Margin" Value="10"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                
                                                <Setter Property="Width" Value="auto"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </Style>
                                        </GridView.ColumnHeaderContainerStyle>
                                        <!--<GridViewColumn Header="Hình ảnh">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image Source="{Binding hinhsp}" Width="100" Height="100"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>-->
                                        <GridViewColumn Header="Tên sản phẩm" DisplayMemberBinding="{Binding tensp}"/>
                                        <GridViewColumn Header="Đơn giá" DisplayMemberBinding="{Binding dongia, StringFormat={}{0:n0}}"/>
                                        <GridViewColumn Header="Số lượng" DisplayMemberBinding="{Binding soluong}"/>
                                        <GridViewColumn Header="Tổng tiền" DisplayMemberBinding="{Binding tongtien, StringFormat={}{0:n0}}"/>
                                        
                                            
                                        
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                        <!--THANH TOÁN-->
                        <Grid Grid.Row="2" Background="DarkGoldenrod">
                            <StackPanel Orientation="Horizontal">
                            <!--TỔNG HÓA ĐƠN-->
                            <TextBlock Text="Tổng tiền: "  FontSize="30" Margin="50 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"/>

                                <TextBlock Text="{Binding total, StringFormat={}{0:n0} VND}" FontSize="30" Margin="50 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"/>
                            </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <!--NÚT THÊM ORDER-->

                                <Button Background="#ff6f00" BorderBrush="Transparent" Content="Thanh toán" Margin="10 10 100 10" Width="120" Height="40" Command="{Binding xacnhancommand}">

                                </Button>

                                <!--NÚT XÓA-->
                                <Button Background="#ff6f00" BorderBrush="Transparent" Content="Xóa" Margin="10 10 100 10" Width="120" Height="40" Command="{Binding xoasanpham}">
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid x:Name="thongke">
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChucNang}" Value="1">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid DataContext="{StaticResource thongkeVM}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="DarkGoldenrod" x:Name="chucnangthongke">
                            
                            <!--CHỨC NĂNG THÔNG KÊ-->
                            <Grid>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                                    <!--Button Doanh Thu-->
                                    <Button
                                     Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                     HorizontalAlignment="Left"
                                    Margin="20 10 20 10"
                                     
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                     ToolTip="Doanh thu">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding BtnDoanhThuCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                        <Image Stretch="Fill" Source="UserControl_BanHang/Icons/icon-Revenue.png"/>

                                    </Button>
                                    <!--Button San Pham-->
                                    <Button
                                     Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                     HorizontalAlignment="Left"
                                    Margin="20 10 20 10"
                                     
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                     ToolTip="Sản phẩm">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding BtnSanPhamCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                        <Image Stretch="Fill" Source="UserControl_BanHang/Icons/icon-Product.png"/>

                                    </Button>
                                    <!--Button History-->
                                    <Button
                                     Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                     HorizontalAlignment="Left"
                                    Margin="20 10 20 10"
                                     
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                     ToolTip="Lịch sử">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding BtnLichSuCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                        <Image Stretch="Fill" Source="UserControl_BanHang/Icons/icon-History.png"/>

                                    </Button>

                                    <!--<Button Height="40" Width="150" Background="#FF0B4911" BorderBrush="{x:Null}" Margin="15 0 0 0">
                                    <DockPanel>
                                        <Image Width="30" Height="30" Source="UserControl_BanHang/Icons/Thongke.png"/>
                                        <TextBlock Margin="0 7 0 0">SẢN PHẨM</TextBlock>
                                    </DockPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ChucNangThongKe}" Value="1">
                                                    <Setter Property="FontWeight" Value="Bold"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding BtnSanPhamCommand}">
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button Height="40" Width="150" Background="#FF0B4911" BorderBrush="{x:Null}" Margin="15 0 0 0">
                                    <DockPanel>
                                        <Image Width="30" Height="30" Source="UserControl_BanHang/Icons/Thongke.png"/>
                                        <TextBlock Margin="0 7 0 0">LỊCH SỬ ĐƠN HÀNG</TextBlock>
                                    </DockPanel>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ChucNangThongKe}" Value="2">
                                                    <Setter Property="FontWeight" Value="Bold"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding BtnLichSuCommand}">
                                            </i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>-->
                                </StackPanel>
                            </Grid>
                            
                        </Grid>
                        <!--NỘI DUNG THỐNG KÊ-->
                        <Grid Grid.Row="1" Background="PaleGoldenrod" x:Name="thongke_noidung">
                            <Grid x:Name="thongke_doanhthu">
                                <Grid.Style>
                                    <Style TargetType="{x:Type Grid}">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ChucNangThongKe}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Loaded">
                                        <i:InvokeCommandAction Command="{Binding loadcommand}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>



                                <!--<lvc:CartesianChart Series="{Binding DoanhThu}">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Ngày" FontSize="20" Foreground="Black" Labels="{Binding Ngay}"/>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Doanh thu" FontSize="20" Foreground="Black"/>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>-->


                                <!--THÔNG TIN THỐNG KÊ-->
                                <Grid>
                                    <lvc:CartesianChart x:Name="chartdoanhthu">
                                        <lvc:CartesianChart.Series>
